{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "jsx": "react-jsx",
        "noEmit": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "vite.config.ts",
        "**/*.test.ts"
    ]
}